{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "importHelpers": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2015",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      "@btf-ui-components": [
        "dist/btf-ui-components"
      ],
      "@btf-ui-components/*": [
        "dist/btf-ui-components/*"
      ],
      "@factoring-apis": [
        "projects/factoring-apis/index.ts"
      ]
    }
  }
}
